	<!-- 目的:为dao接口方法提供sql语句配置 -->
	<insert id="addUser" parameterType="User">
		insert into user
		(id,name,password,institute,specialty,sex,phone,email,
		status,auditor,wealth,release_num,reward_num,credit,dissension_num,create_time,real_name)
		values(#{id},#{name},#{password},#{institute},#{specialty},#{sex},#{phone},#{email},
		#{status},#{auditor},#{wealth},#{releaseNum},#{rewardNum},#{credit},#{dissensionNum},#{createTime},#{realName})
	</insert>

	<update id="updateStatus">
		update user
		set status=#{status},auditor=#{auditor}
		where id=#{id}
	</update>

	<select id="login" resultType="User">
		select
		id,name,password,institute,specialty,sex,picture,phone,email,status,auditor,release_num,reward_num,wealth,credit,dissension_num,create_time
		from user
		where id=#{id} and password=#{password}
	</select>

	<select id="queryById" resultType="User" parameterType="String">
		select
		id,name,password,institute,specialty,sex,picture,phone,email,status,auditor,release_num,reward_num,wealth,credit,dissension_num,create_time,real_name
		from user
		where id=#{id};
	</select>

	<select id="queryName" resultType="User" parameterType="String">
		select
		id,name,picture
		from user
		where id=#{id};
	</select>

	<select id="queryWealthById" resultType="int" parameterType="String">
		select wealth
		from user
		where id=#{id};
	</select>

	<select id="queryAll" resultType="User">
		select
		id,name,password,institute,specialty,sex,phone,email,
		status,auditor,wealth,release_num,reward_num,credit,dissension_num,create_time
		from user
	</select>

	<select id="queryByStatus" resultType="User">
		select
		id,name,institute,specialty,sex,phone,email,create_time
		from user
		where
		status=#{status}
	</select>

	<select id="queryAllNotActive" resultType="User">
		select
		id,name,password,institute,specialty,sex,phone,email,
		status,auditor,wealth,release_num,reward_num,credit,dissension_num,create_time
		from user
		where status=0
	</select>

	<update id="updateById" parameterType="User">
		update user
		set
		password=#{password},phone=#{phone},email=#{email}
		where id=#{id}
	</update>

	<update id="updatePicById" parameterType="User">
		update user
		set
		picture=#{picture}
		where id=#{id}
	</update>

	<update id="updateWealth">
		update user
		set wealth=wealth+#{wealth}
		where id=#{id}
	</update>

</mapper>