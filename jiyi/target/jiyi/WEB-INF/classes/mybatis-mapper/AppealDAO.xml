<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chendi.jiyi.dao.AppealDAO">
	<!-- 目的:为dao接口方法提供sql语句配置 -->
	<insert id="addAppeal" parameterType="Appeal">
		insert into appeal (a_accuser,a_defendant,a_reason,)
		values(#{nId},#{uId},#{cDetails},#{cCreateTime})
	</insert>

	<select id="queryByNoticeId" resultType="Comment" parameterType="int">
		select n_id,u_id,c_details,c_create_time,c_praise
		from comment
		where n_id=#{nId}
	</select>

	<update id="praiseByCommentId" parameterType="int">
		update comment 
		set c_praise=c_praise+1
		where c_id=#{cId}
	</update>
	
	<delete id="deleteByCommentId" parameterType="int">
		delete from comment
		where c_id=#{cId}
	</delete>
</mapper>