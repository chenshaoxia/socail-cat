<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.chendi.jiyi.dao.NoticeDAO">
	<!-- 目的:为dao接口方法提供sql语句配置 -->
	<insert id="addNotice" keyProperty="nId"
		useGeneratedKeys="true"  parameterType="Notice">
		insert into notice (n_title,n_details,n_publisher,n_create_time,n_is_top)
		values(#{nTitle},#{nDetails},#{nPublisher},#{nCreateTime},#{nIsTop})
	</insert>

	<select id="queryById" resultType="Notice" parameterType="int">
		select n_id,n_title,n_details,n_publisher,n_create_time,n_is_top
		from notice
		where n_id=#{id}
	</select>

	<select id="queryAll" resultType="Notice">
		select n_id,n_title,n_details,n_publisher,n_create_time,n_is_top
		from notice
	</select>

	<update id="updateById" parameterType="Notice">
		update notice
		set n_title=#{nTitle},n_details=#{nDetails},n_publisher=#{nPublisher},
			n_create_time=#{nCreateTime},n_is_top=#{nIsTop}
		where n_id=#{nId}
	</update>
	
	<delete id="deleteById" parameterType="int">
		delete from notice
		where n_id=#{nId}
	</delete>
</mapper>